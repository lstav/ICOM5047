<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!-- As the main content view, the view below consumes the entire
            space available using match_parent in both dimensions. -->
    <FrameLayout android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <SearchView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/searchView"
                    android:iconifiedByDefault="false"
                    android:layout_margin="10dp" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Login to buy tours."
                        android:id="@+id/login_description"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:layout_marginLeft="5dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login"
                        android:id="@+id/login_button"
                        android:onClick="login"
                        android:layout_gravity="right"
                        android:background="#8cc538"
                        android:textColor="#fff"
                        android:layout_margin="5dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Not a member? Register an account today."
                        android:id="@+id/register_description"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:layout_marginLeft="5dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register"
                        android:id="@+id/register_button"
                        android:onClick="register"
                        android:layout_gravity="right"
                        android:background="#8cc538"
                        android:textColor="#fff"
                        android:layout_margin="5dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Account"
                        android:id="@+id/account_button"
                        android:layout_weight="1"
                        android:background="#8cc538"
                        android:textColor="#fff"
                        android:layout_margin="5dp"
                        android:drawableTop="@android:drawable/ic_menu_info_details"
                        android:onClick="account" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Categories"
                        android:id="@+id/categories_button"
                        android:layout_weight="1"
                        android:background="#8cc538"
                        android:textColor="#fff"
                        android:layout_margin="5dp"
                        android:drawableTop="@android:drawable/ic_menu_sort_by_size"
                        android:onClick="searchCat" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/border"
                    android:elevation="0dp"
                    android:id="@+id/categories_row"
                    android:clickable="true"
                    android:onClick="searchCat">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView2"
                        android:src="@android:drawable/ic_menu_sort_by_size"
                        android:layout_margin="10dp" />

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Browse Categories"
                            android:id="@+id/textView5"
                            android:textSize="20dp"
                            android:textColor="#000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Explore tours"
                            android:id="@+id/textView10"
                            android:textIsSelectable="false"
                            android:textSize="18dp" />
                    </TableLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/border"
                    android:elevation="0dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView3"
                        android:src="@android:drawable/ic_menu_manage"
                        android:layout_margin="10dp" />

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Settings"
                                android:id="@+id/textView11"
                                android:textSize="20dp"
                                android:textColor="#000"
                                android:layout_margin="13dp"
                                android:layout_column="16" />
                        </TableRow>

                    </TableLayout>
                </TableRow>

            </LinearLayout>
        </ScrollView>

    </FrameLayout>

</RelativeLayout>
